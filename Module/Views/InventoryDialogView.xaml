<UserControl x:Class="Module.Views.InventoryDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" >
    
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Height" Value="450" />
            <Setter Property="Width" Value="300" /> 
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <StackPanel 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Height="40"
                    Margin="25 0 0 0"
                    Panel.ZIndex="10">
            <TextBlock Text="Select Action:"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <ComboBox Width="100"
                      Height="20"
                      Margin="0 5 0 0"
                      SelectedItem="{Binding SelectedInventoryDisplay}">
                <ComboBoxItem Content="Add"/>
                <ComboBoxItem Content="Delete"/>
                <ComboBoxItem Content="Update"/>
                <ComboBoxItem Content="Display"/>
            </ComboBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right"
                    Margin="0 0 25 0">
            <TextBlock Text="Confirm Action:"
                       FontSize="14"
                       />
            <Button Height="20"
                    Width="100"
                    Margin="0 5 0 0"
                    Content="Confirm">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        <Grid Margin="25 50 25 15"
              Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Height="50"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch"
                        Grid.ColumnSpan="2">

                <TextBlock Text="Item"
                           FontSize="14"/>
                <TextBox Text="{Binding Item}" />
            </StackPanel>

            <StackPanel Height="50"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch"
                        Grid.Row="1"
                        Grid.ColumnSpan="2">
                <TextBlock Text="In Stock"
                           FontSize="14"/>
                <TextBox Text="{Binding InStock}" />
            </StackPanel>

            <StackPanel Height="50"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch"
                        Grid.Row="2"
                        Grid.ColumnSpan="2">
                <TextBlock Text="On Order"
                           FontSize="14"/>
                <TextBox Text="{Binding On_Order}" />
            </StackPanel>

            <StackPanel Height="50"
                        HorizontalAlignment="Stretch"
                        Grid.Row="3"
                        Grid.ColumnSpan="2">
                <TextBlock Text="Delivery Date"
                           FontSize="14"/>
                <TextBox Text="{Binding Delivery_Date}" />
            </StackPanel>

            <StackPanel Height="50"
                        HorizontalAlignment="Stretch"
                        Grid.Row="4"
                        Grid.ColumnSpan="2">
                <TextBlock Text="Reorder Limit"
                           FontSize="14" />
                <TextBox Text="{Binding Reorder_Limit}" />
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Grid.Row="6"
                        Grid.ColumnSpan="2">
                <TextBlock Text="Add Inventory"
                           Height="25"
                           HorizontalAlignment="Left"
                           FontSize="14"/>
                <Button Command="{Binding AddInventoryCommand}"
                        Content="Submit"
                        HorizontalAlignment="Stretch"
                        Height="25">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"  Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <syncfusion:SfDataGrid 
                               Margin="25 50 25 25"
                               ColumnSizer="Star"
                               BorderBrush="Transparent"
                               AllowSorting="False" 
                               AllowTriStateSorting="True" 
                               ShowSortNumbers="True" 
                               AllowFiltering="True"
                               Background="White"
                               Panel.ZIndex= "0" />
    </Grid>
</UserControl>
