<UserControl x:Class="Module.Views.SalesOrderDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Module.Views"
             xmlns:prism="http://prismlibrary.com/" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="600">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Height" Value="650" />
            <Setter Property="Width" Value="600" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="80"/>
            <RowDefinition Height="30" />
            <RowDefinition Height="60"/>
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <StackPanel Grid.ColumnSpan="3"
                Background="LightGray">
            <TextBlock Text="Header"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Grid.Row = 1 -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
            <TextBlock Text="Date Sold:"
                       Margin="0 0 0 5"
                       FontSize="14"/>
            <syncfusion:DateTimeEdit Width="150"
                 Height="25"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 DateTime="{Binding Date_Start}"
                 CustomPattern="yyyy-MM-dd">
            </syncfusion:DateTimeEdit>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 5">
                <TextBlock Text="Salesperson:"
                           FontSize="14"/>
                <Button Content="Create"
                        Command="{Binding NewCustomerCommand}"
                        Margin="35 0 0 0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <ComboBox Width="150"
                  Height="25">
                <ComboBoxItem Content="Matt Schlabach"/>
                <ComboBoxItem Content="Dustin Kurtz"/>
                <ComboBoxItem Content="Andrew Seese"/>
                <ComboBoxItem Content="James Forbes"/>
                <ComboBoxItem Content="Hunter Herrera"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Column="2"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 5">
                <TextBlock Text="Customer:"
                           FontSize="14"/>
                <Button Content="Create"
                        Margin="49 0 0 0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
             <ComboBox Width="150"
                       Height="25">
                 <ComboBoxItem Content="Mountain Outfitters"/>
                 <ComboBoxItem Content="East Coast Customs"/>
                 <ComboBoxItem Content="Denver Exporters"/>
                 <ComboBoxItem Content="Pheonix Resell"/>
                 <ComboBoxItem Content="Miami Money"/>
                 <ComboBoxItem Content="Cali-Flowers"/>
                 <ComboBoxItem Content="Cleveland Retail"/>
                 <ComboBoxItem Content="Chicago GoodSales"/>
             </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Background="LightGray">
            <TextBlock Text="Header2"
                       FontSize="16"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0 4 0 0"/>
        </StackPanel>
        

        <ListView Grid.Row="3"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2"
                  Margin="70 10 0 10"
                  HorizontalAlignment="Left"
                  Width="182"
                  BorderBrush="DarkGray"
                  ItemsSource="{Binding ListOfInv}"
                  SelectedValue="{Binding SelItem}"
                  DisplayMemberPath="Item">
        </ListView>

        <StackPanel Grid.Row="3"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0 10 70 0">

            <!--<StackPanel 
                HorizontalAlignment="Right"
                Width="150"
                Margin="0 0 0 5">
                <TextBlock Text="Item"
                           FontSize="14"/>
                <ListView ItemsSource="{Binding ItemName}"
                          Height="25"/>
                --><!--<Button Height="25"
                        Content="Test"
                        Command="{Binding TestCommand}"></Button>--><!--
            </StackPanel>-->
            <StackPanel 
                        HorizontalAlignment="Right"
                        Width="150"
                        Margin="0 0 0 5">
                <TextBlock Text="Price"
                           FontSize="14"/>
                <TextBox />
            </StackPanel>

            <StackPanel
                        HorizontalAlignment="Right"
                        Width="150"
                        Margin="0 0 0 5">
                <TextBlock Text="Price"
                           FontSize="14"/>
                <TextBox />
            </StackPanel>
            <StackPanel Grid.Column="2"
                        Grid.Row="5"
                        HorizontalAlignment="Right"
                        Width="150"
                        Margin="0 0 0 20">
                <TextBlock Text="Quantity"
                           FontSize="14"/>
                <TextBox />
            </StackPanel>
            <Button Command="{Binding AddSalesLineCommand}"
                    Grid.Row="5"
                    HorizontalAlignment="Right"
                    Grid.Column="1"
                    Content="Add To Sales Order"
                    Height="25"
                    Width="150">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        <StackPanel Background="LightGray"
                    Grid.Row="5"
                    Grid.ColumnSpan="3">
            <StackPanel.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Header3"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Margin="0 4 0 0"/>
        </StackPanel>
        <ListView Grid.Row="7"
                  Grid.ColumnSpan="3"
                  ItemsSource="{Binding SalesOrderDisplay}"/>
    </Grid>
</UserControl>
